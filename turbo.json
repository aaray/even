{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"typecheck": {
			"dependsOn": ["^build"]
		},
		"lint": {},
		"test": {
			"cache": false
		},
		"test:e2e": {
			"dependsOn": ["build"],
			"cache": false
		},
		"storybook": {
			"cache": false,
			"persistent": true
		},
		"storybook:build": {
			"dependsOn": ["^build"],
			"outputs": ["storybook-static/**"]
		}
	}
}

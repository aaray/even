{
	"name": "even-artist-dashboard",
	"private": true,
	"workspaces": ["apps/*", "packages/*", "e2e"],
	"scripts": {
		"dev": "turbo run dev",
		"build": "turbo run build",
		"typecheck": "turbo run typecheck",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"test:e2e": "turbo run test:e2e",
		"storybook": "turbo run storybook --filter=@even/storybook",
		"storybook:build": "turbo run storybook:build --filter=@even/storybook"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"turbo": "^2.8.3",
		"typescript": "^5.9.3"
	},
	"packageManager": "bun@1.1.42"
}

{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"plugins": [
			{
				"name": "next"
			}
		],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"allowJs": true,
		"jsx": "preserve",
		"incremental": true,
		"paths": {
			"@/*": ["./src/*"]
		},
		"noEmit": true
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "next-env.d.ts", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
